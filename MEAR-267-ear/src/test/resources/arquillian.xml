<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <defaultProtocol type="Servlet 2.5">
        <property name="scheme">http</property>
        <property name="port">${jboss.http.port}</property>
        <property name="host">localhost</property>
    </defaultProtocol>
    <container qualifier="wildfly-managed">
        <configuration>
            <property name="javaHome">${java.home}</property>
            <property name="jbossHome">${jboss.home}</property>
            <property name="serverConfig">standalone.xml</property>
            <property name="managementPort">${jboss.management.http.port}</property>
        </configuration>
    </container>
</arquillian>